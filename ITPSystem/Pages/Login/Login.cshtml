@page
@model LoginModel
@{
    ViewData["Title"] = "Login - ITPSystem";
}

<div class="container mt-5" style="max-width: 400px;">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="card-title text-center mb-4">Login</h3>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }

            <form method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">Email or Username</label>
                    <input type="text" asp-for="Email" class="form-control"
                           placeholder="e.g: student1@univ.edu.my or sinnee22" required />
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" asp-for="Password" class="form-control"
                           placeholder="NRIC as default password" required />
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <a asp-page="/Login/ForgotPassword">Forgot Password?</a>
                    <a asp-page="/Login/StudentSignup">Sign up</a>
                </div>

                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>
        </div>
    </div>
</div>
