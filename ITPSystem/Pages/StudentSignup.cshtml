@page
@model StudentSignupModel
@{
    ViewData["Title"] = "Student Signup";
}

<div class="container mt-5" style="max-width: 700px;">
    <h3 class="mb-4 text-center">Student Signup Form</h3>

    <form method="post">
        <h5>Login Info</h5>
        <div class="row mb-3">
            <div class="col">
                <label>Email</label>
                <input asp-for="Email" class="form-control" placeholder="xxx-xx99@student.tarc.edu.my" required />
            </div>
            <div class="col">
                <label>Username</label>
                <input asp-for="Username" class="form-control" placeholder="Display name" />
            </div>
            <div class="col">
                <label>NRIC</label>
                <input asp-for="ICNumber" class="form-control" placeholder="999999-99-9999" required />
            </div>
        </div>

        <h5>Student Info</h5>
        <div class="mb-3">
            <label>Full Name</label>
            <input asp-for="Student.studentName" class="form-control" />
        </div>
        <div class="row mb-3">
            <div class="col">
                <label>Student ID</label>
                <input asp-for="Student.studentID" class="form-control" placeholder="99WMR9999" />
            </div>
            <div class="col">
                <label>Student Email</label>
                <input asp-for="Student.studentEmail" class="form-control" placeholder="xxx-xx99@student.tarc.edu.my" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col">
                <label>Gender</label>
                <select asp-for="Student.gender" class="form-select">
                    <option value="M">Male</option>
                    <option value="F">Female</option>
                </select>
            </div>
            <div class="col">
                <label>CGPA</label>
                <input asp-for="Student.CGPA" class="form-control" placeholder="1.0 - 4.0" type="number" step="0.01" />
            </div>
        </div>

        <button type="submit" class="btn btn-primary w-100 mt-3">Sign Up</button>
    </form>
</div>