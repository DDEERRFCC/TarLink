@page
@model StudentProfileModel
@{
    ViewData["Title"] = "My Profile";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap');

    .profile-wrap {
        font-family: "Space Grotesk", "Trebuchet MS", sans-serif;
        background: linear-gradient(170deg, #f2f7fc, #e7eff8);
        min-height: calc(100vh - 80px);
        padding: 1.6rem 0 2.4rem;
    }

    .profile-shell {
        max-width: 1050px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .profile-header {
        background: linear-gradient(120deg, #0f172a, #155e75);
        color: #fff;
        border-radius: 16px;
        padding: 1.2rem 1.3rem;
        margin-bottom: 1rem;
        box-shadow: 0 14px 30px rgba(15, 23, 42, 0.16);
    }

    .profile-grid {
        display: grid;
        grid-template-columns: 1.45fr 1fr;
        gap: 1rem;
    }

    .profile-card {
        background: #fff;
        border: 1px solid #d7e2ee;
        border-radius: 14px;
        padding: 1rem;
        box-shadow: 0 10px 24px rgba(20, 40, 70, 0.08);
    }

    .section-title {
        margin: 0 0 .7rem;
        color: #1f2937;
        font-size: 1.03rem;
        font-weight: 700;
    }

    .info-row {
        border-bottom: 1px dashed #dbe6f1;
        padding: .55rem 0;
    }

    .info-row:last-child {
        border-bottom: 0;
    }

    .info-label {
        font-size: .85rem;
        color: #6b7280;
        margin-bottom: .1rem;
    }

    .info-value {
        color: #1f2937;
        font-weight: 600;
    }

    @@media (max-width: 920px) {
        .profile-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="profile-wrap">
    <div class="profile-shell">
        <div class="profile-header d-flex justify-content-between align-items-start gap-3 flex-wrap">
            <div>
                <div style="opacity:.85;font-size:.9rem;">ITP System</div>
                <h2 class="mb-1">Student Profile</h2>
                <p class="mb-0" style="opacity:.9;">Manage your own details and review your assigned supervisor details.</p>
            </div>
            <a asp-page="/Student/Dashboard" class="btn btn-light btn-sm">Back to Dashboard</a>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
        {
            <div class="alert alert-info">@Model.StatusMessage</div>
        }

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul class="mb-0">
                    @foreach (var entry in ViewData.ModelState.Values)
                    {
                        foreach (var error in entry.Errors)
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    }
                </ul>
            </div>
        }

        @if (Model.Student == null)
        {
            <div class="profile-card">
                <h3 class="section-title">Profile Not Available</h3>
                <p class="mb-0">Your student profile is not linked yet. Please contact admin or committee.</p>
            </div>
        }
        else
        {
            <div class="profile-grid">
                <div class="profile-card">
                    <h3 class="section-title">My Details (Editable)</h3>
                    <form method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Input.studentName" class="form-label">Full Name</label>
                                <input asp-for="Input.studentName" class="form-control" />
                                <span asp-validation-for="Input.studentName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Input.studentEmail" class="form-label">Student Email</label>
                                <input asp-for="Input.studentEmail" class="form-control" />
                                <span asp-validation-for="Input.studentEmail" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Input.personalEmail" class="form-label">Personal Email</label>
                                <input asp-for="Input.personalEmail" class="form-control" />
                                <span asp-validation-for="Input.personalEmail" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Input.permanentContact" class="form-label">Mobile Number</label>
                                <input asp-for="Input.permanentContact" class="form-control" />
                                <span asp-validation-for="Input.permanentContact" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Input.tempAddress" class="form-label">Term Address</label>
                                <textarea asp-for="Input.tempAddress" class="form-control"></textarea>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Input.permanentAddress" class="form-label">Permanent Address</label>
                                <textarea asp-for="Input.permanentAddress" class="form-control"></textarea>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Input.ownTransport" class="form-label">Own Transport</label>
                                <select asp-for="Input.ownTransport" class="form-select">
                                    <option value="true">Yes</option>
                                    <option value="false">No</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Input.healthRemark" class="form-label">Health Remark</label>
                                <textarea asp-for="Input.healthRemark" class="form-control"></textarea>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Input.programmingKnowledge" class="form-label">Programming</label>
                                <input asp-for="Input.programmingKnowledge" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Input.databaseKnowledge" class="form-label">Database</label>
                                <input asp-for="Input.databaseKnowledge" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Input.networkingKnowledge" class="form-label">Networking</label>
                                <input asp-for="Input.networkingKnowledge" class="form-control" />
                            </div>
                        </div>

                        <div class="mt-3 d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a asp-page="/Student/Profile" class="btn btn-outline-secondary">Reset</a>
                        </div>
                    </form>
                </div>

                <div class="profile-card">
                    <h3 class="section-title">Supervisor Details</h3>
                    <div class="info-row">
                        <div class="info-label">Supervisor Name</div>
                        <div class="info-value">@Model.Student.ucSupervisor</div>
                    </div>
                    <div class="info-row">
                        <div class="info-label">Supervisor Email</div>
                        <div class="info-value">@Model.Student.ucSupervisorEmail</div>
                    </div>
                    <div class="info-row">
                        <div class="info-label">Supervisor Contact</div>
                        <div class="info-value">@Model.Student.ucSupervisorContact</div>
                    </div>

                    <h3 class="section-title mt-4">Academic Snapshot</h3>
                    <div class="info-row">
                        <div class="info-label">Student ID</div>
                        <div class="info-value">@Model.Student.studentID</div>
                    </div>
                    <div class="info-row">
                        <div class="info-label">Programme</div>
                        <div class="info-value">@Model.Student.programme</div>
                    </div>
                    <div class="info-row">
                        <div class="info-label">Group</div>
                        <div class="info-value">@Model.Student.groupNo</div>
                    </div>
                    <div class="info-row">
                        <div class="info-label">CGPA</div>
                        <div class="info-value">@Model.Student.CGPA</div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
